<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="user_ui.user_ui.controller.UserForm" displayBlock="true">
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="{i18n>title}">
					<content>
					    <sap.ui.layout.form:SimpleForm xmlns:sap.ui.layout.form="sap.ui.layout.form" xmlns:sap.ui.core="sap.ui.core" editable="true" layout="ResponsiveGridLayout" id="form0">
					        <sap.ui.layout.form:content>
					            <sap.ui.core:Title text="{i18n>ttlUser}" id="title0"/>
					            <Label text="{i18n>lblFirstName}" id="label0"/>
					            <Input id="input0" value="{local>/FirstName}" width="75%"/>
					            <Label text="{i18n>lblLastName}" id="label1"/>
					            <Input id="input2" value="{local>/LastName}" width="100%"/>
					            <Button xmlns="sap.m" text="{i18n>txtProceed}" id="button0" width="50%" press="onProcess"/></sap.ui.layout.form:content>
					    </sap.ui.layout.form:SimpleForm>
					</content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>